generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Users {
  id   String @id @default(uuid())
  email String @unique
  password  String
  credits Int @default(0)
  apiKeys ApiKey[]
  onrampTranseaction  OnrampTranseaction[]
  conversations Conversation[]
}

model Models {
id  Int @id @default(autoincrement())
userId  Int
name  String
apiKey  String @unique  // not store in plane text we need to hash it
disabled  Boolean @default(false)
deleted   Boolean @default(false) // not deleted from db so the relation or foreng key relation mantain or no other table data get lost we are taking with respect to conversation 
user    Users   @relation(fields: [userId], references: [id])
conversations Conversation[]
}

model ApiKey {
  id Int @id @default(autoincrement())
  userId Int
  name String
  
}

model OnrampTranseaction {

}

model Conversation {

}

